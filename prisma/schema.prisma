generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model VM {
  user            String @unique
  node            String
  vmId              String  
  exerciseId        String
  ip              String
  port            String
  timeLimit       String
  timeStart       DateTime   @default(now())
  timeEnd         DateTime
}

model Exercise {
  exercise_ID String
  status String @default("incomplete")
  user String 
  @@unique([exercise_ID,user])
}

model preference {
  uid      String    @unique
  darkmode  Boolean   @default(false)
}