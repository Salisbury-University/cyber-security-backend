generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Connection {
  ip   String @unique
  port Int
  VM   VM[]
}

model VM {
  vm            String     
  exercise      String
  node          String
  connection    Connection @relation(fields: [connection_ip], references: [ip])
  connection_ip String
  // Since user can only have one VM up at the time user is the @unique
  // Plan to delete the VM db once it terminates
  user          String      @unique
  timeLimit     String
  timeStart     DateTime   @default(now())
  timeEnd       DateTime
}