generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Connection {
  ip   String @unique
  port Int
  VM   VM[]
}

model VM {
  user          String
  vm            String     
  exercise      String
  node          String
  connection    Connection @relation(fields: [connection_ip], references: [ip])
  connection_ip String
  timeLimit     String
  timeStart     DateTime   @default(now())
  timeEnd       DateTime
  @@unique([user, exercise])
}