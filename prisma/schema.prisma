generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model VM {
  user            String
  // This is so we can delete it from the node
  node            String
  // Actuall vm id
  vm              String
  // Exercise id     
  exercise        String
  ip              String
  port            String
  timeLimit       String
  timeStart       DateTime   @default(now())
  timeEnd         DateTime
  status          String
  // Both have to be unique
  // This is so that it isn't relient on max number of integer
  // Can scale up to max number the database can hold
  @@unique([user, exercise])
}

model Exercise {
  exercise_ID String
  status String @default("incomplete")
  user String 
  @@unique([exercise_ID,user])
}

model preference {
  uid      String    @unique
  darkmode  Boolean   @default(false)
}